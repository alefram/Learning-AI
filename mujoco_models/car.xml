<mujoco>
<!-- configuracion del compilador -->
    <option timestep="0.002" gravity="0 0 -9.8"/>

    <!-- valores por defecto para la simulaciÃ³n -->
    <default>
        <light castshadow="false" diffuse="1 1 1"/>
        <joint frictionloss="1" damping="1"/>
    </default>
    
    <asset>
        <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3"
         rgb2=".2 .3 .4" width="300" height="300"/>
        <material name="grid" texture="grid" texrepeat="8 8" reflectance=".2"/>
    </asset>

    <!-- modelo -->
    <worldbody>

        <camera name="closeup" pos="0.05 -0.1 .05" axisangle="1 0.5 0 60"/>
        <!-- luces -->
        <light pos="0 0 1"/>
        
        <!-- piso -->
        <geom name="ground" size=".2 .2 .01" type="plane" material="grid"/>

        <!-- car -->
        <body name="car" pos="0 0 0.1">
            <freejoint/>
            <body name="base" pos="0 0 0.005">
                <geom name="base" type="box" size="0.01 0.02 0.01"/>
             </body>
             <body name="wheel1" pos="0.015 0.015 0.001">
                 <geom 
                    name="wheel1" 
                    type="cylinder" 
                    size="0.008 0.001" 
                    quat="1 0 1 0"
                    solimp=".99 .99 .01"  
                     solref=".001 1"
                />
                <joint name="joint1" pos="0 0 0" axis="1 0 0"/>
            </body>
            <body name="wheel2" pos="-0.015 0.015 0.001">
                <geom 
                    name="wheel2" 
                    type="cylinder" 
                    size="0.008 .001" 
                    quat="1 0 1 0"
                />
                <joint name="joint2" pos="0 0 0" axis="-1 0 0"/>
            </body>
            <body name="wheel3" pos="0.015 -0.015 0.001">
                <geom 
                    name="wheel3" 
                    type="cylinder" 
                    size="0.008 .001" 
                    quat="1 0 1 0"
                />
                <joint name="joint3" pos="0 0 0" axis="1 0 0"/>
            </body>
            <body name="wheel4" pos="-0.015 -0.015 0.001">
                <geom 
                    name="wheel4" 
                    type="cylinder" 
                    size="0.008 .001" 
                    quat="1 0 1 0"
                />
                <joint name="joint4" pos="0 0 0" axis="-1 0 0"/>
            </body>
        </body>
    </worldbody>

    <!-- motores -->
    <actuator>
        <velocity name="joint1_motor" joint="joint1"/>
        <velocity name="joint2_motor" joint="joint2"/>
        <velocity name="joint3_motor" joint="joint3"/>
        <velocity name="joint4_motor" joint="joint4"/>
    </actuator>
</mujoco>

